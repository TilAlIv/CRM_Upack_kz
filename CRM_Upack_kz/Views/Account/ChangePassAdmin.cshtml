@model CRM_Upack_kz.ViewModels.ChangePassAdminViewModel



<div id="BaseBody" class="text-center col col-sm-3 col-md-4 col-lg-12"></div>

@if (User.Identity.Name == Model.Email || User.IsInRole("admin"))
{
    <div class="baseElement col-md-4 pt-3 pb-4 ">
        <div class="col-md-6">
            <form asp-action="ChangePassAdmin" asp-controller="Account" method="post">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group p-1">
                    <label asp-for="NewPassword"></label>
                    <input class="form-control" asp-for="NewPassword" id="changePassword">
                    <small><span asp-validation-for="NewPassword" class="text-danger"></span></small>
                </div>
                <input type="hidden" asp-for="Id" value="@Model.Id">
                <input type="hidden" asp-for="Email" value="@Model.Email">
                <div class="form-group p-1">
                    <input type="submit" class="btn btn-outline-primary" value="Изменить" id="edit">
                </div>
            </form>
        </div>
    </div>
}
else
     {
         <div class="baseElement card mb-3" style="max-width: 540px;">
             <div class="row g-0 shadow">
                 <div class="col-md-4">
                     <img src="..\..\/Images/Warning/warning.png" class="img-fluid rounded-start" alt="...">
                 </div>
                 <div class="col-md-8">
                     <div class="card-body">
                         <h5 class="card-title">Внимание!</h5>
                         <p class="card-text">Вы не являетесь хозяином этого профиля, пожалуйста покиньте эту страницу.</p>
                         <p class="card-text"><small class="text-muted">Последнее обновление 1 минуту назад</small></p>
                     </div>
                 </div>
             </div>
         </div>
     }




@section Scripts
{
    <script >
        $(document).ready(function () {
            $('#caption').text("Изменение пароля пользователя");
        });
    </script>
}