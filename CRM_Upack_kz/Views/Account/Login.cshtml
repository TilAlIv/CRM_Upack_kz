@model CRM_Upack_kz.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Вход";
    Layout = "_Layout2";
}

<div class="row justify-content-center ">
    <div class="col-md-6 pt-3 pb-4 shadow">
        <h2 class="font mb-4"><i class="bi bi-fingerprint text-muted"></i>  Вход в систему</h2>
        <form asp-action="Login" asp-controller="Account" method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group mb-2">
                <span><i class="bi bi-envelope text-muted"></i>&nbsp; <label class="font" asp-for="Email"></label></span>
                <input class="form-control" asp-for="Email" id="email">
                <small><span asp-validation-for="Email" class="text-danger"></span></small>
            </div>
            <div class="form-group">
                <span><b><i class="bi bi-key text-muted"></i></b> &nbsp;<label class="font" asp-for="Password"></label></span>
                <input class="form-control" asp-for="Password" id="password">
                <small><span asp-validation-for="Password" class="text-danger"></span></small>
            </div>
            <div>
                <input type="submit" id="enter" class="btn btn-outline-primary mt-0" value="Войти">
            </div>
        </form>
    </div>
</div>

