@model CRM_Upack_kz.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Вход";
    Layout = "_Layout2";
}

<div class="row justify-content-center ">
    <div class="col-md-6 pt-3 pb-4 shadow">
        <h2>Вход в систему</h2>
        <form asp-action="Login" asp-controller="Account" method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control" asp-for="Email" id="email">
                <small><span asp-validation-for="Email" class="text-danger"></span></small>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password" id="password">
                <small><span asp-validation-for="Password" class="text-danger"></span></small>
            </div>
            <div>
                <input type="submit" id="enter" class="btn btn-outline-primary mt-0" value="Войти">
            </div>
        </form>
    </div>
</div>

