@model CRM_Upack_kz.ViewModels.ChangePassUserViewModel

@{
    Layout = "_Layout";
}
<div id="BaseBody" class="text-center col col-sm-3 col-md-4 col-lg-12"></div>

@if (User.Identity.Name == Model.Email)
{
    <div class="baseElement col-md-4 pt-3 pb-4">
        <h2>Измените ваш пароль</h2>
        <form asp-action="ChangePassUser" asp-controller="Account" method="post" enctype="multipart/form-data">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id">
            <input type="hidden" asp-for="Email" value="@Model.Email">
            <div class="form-group mb-3">
                <label asp-for="OldPassword"></label>
                <input id="oldPassword" class="form-control shadow-sm" asp-for="OldPassword">
                <small><span asp-validation-for="OldPassword" class="text-danger"></span></small>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NewPassword"></label>
                <input id="newPassword" class="form-control shadow-sm" asp-for="NewPassword">
                <small><span asp-validation-for="NewPassword" class="text-danger"></span></small>
            </div>
            <div class="form-group mb-2">
                <label asp-for="ConfirmPassword"></label>
                <input id="confirmPassword" class="form-control shadow-sm" asp-for="ConfirmPassword">
                <small><span asp-validation-for="ConfirmPassword" class="text-danger"></span></small>
            </div>
            <div>
                <input type="submit" id="register" class="btn btn-outline-primary" value="Изменить">
            </div>
        </form>
    </div>
}

else
     {
         <div class="baseElement card mb-3" style="max-width: 540px;">
             <div class="row g-0 shadow">
                 <div class="col-md-4">
                     <img src="..\..\/Images/Warning/warning.png" class="img-fluid rounded-start" alt="...">
                 </div>
                 <div class="col-md-8">
                     <div class="card-body">
                         <h5 class="card-title">Внимание!</h5>
                         <p class="card-text">Вы не являетесь хозяином этого профиля, пожалуйста покиньте эту страницу.</p>
                         <p class="card-text"><small class="text-muted">Последнее обновление 1 минуту назад</small></p>
                     </div>
                 </div>
             </div>
         </div>
     }
@section Scripts
{
    <script >
    $(document).ready(function () {
        $('#caption').text("Изменение пароля");
    });
    
    
 </script>
}