@model CRM_Upack_kz.ViewModels.ApplViewModel

<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<div class="form-group mb-3">
    <label asp-for="CodeClient"></label>
    <input id="codeClient" class="form-control shadow-sm" onchange="GetInfoClientAjax()" asp-for="CodeClient" value="@Model.CodeClient">
    <small><span asp-validation-for="CodeClient" class="text-danger"></span></small>
</div>
<div class="form-group mb-3">
    <label asp-for="NameClient"></label>
    <input id="nameClient" class="form-control shadow-sm" placeholder="" asp-for="NameClient" value="@Model.NameClient">
    <small><span asp-validation-for="NameClient" class="text-danger"></span></small>
</div>
<div class="form-group mb-3">
    <label asp-for="ArticleNumber"></label>
    <input class="form-control shadow-sm" asp-for="ArticleNumber" value="@Model.ArticleNumber">
    <small><span asp-validation-for="ArticleNumber" class="text-danger"></span></small>
</div>
<div class="form-group mb-3">
    <label asp-for="Quantity"></label>
    <input class="form-control shadow-sm" asp-for="Quantity" value="@Model.Quantity">
    <small><span asp-validation-for="Quantity" class="text-danger"></span></small>
</div>
<div class="form-group mb-3">
    <label asp-for="Price"></label>
    <input class="form-control shadow-sm" asp-for="Price" value="@Model.Price">
    <small><span asp-validation-for="Price" class="text-danger"></span></small>
</div>
<div class="form-group mb-2">
    <label asp-for="Comment"></label>
    <textarea class="form-control shadow-sm" asp-for="Comment">@Model.Comment</textarea>
    <small><span asp-validation-for="Comment" class="text-danger"></span></small>
</div>

